
<div class='nav_item'>
  <%= link_to "Tuition", root_path, class: 'navbar-brand' %>
</div>

<% if logged_in? %>
  <ul class="nav navbar-nav navbar-right">

    <div class='nav_item'>
      <%= link_to 'New Category', new_category_path, class: 'btn btn-small navbar-btn' %>
    </div>  

    <div class='btn-group nav_item navbar-btn'>
      <%= link_to('', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do %>
        <%= current_user.username %>
        <span class='caret'></span>
      <% end %>
      <ul class='dropdown-menu'>
        <li>
          <%= link_to edit_user_path(current_user) do %>
            edit profile
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user) do %>
            view profile
          <% end %>
        </li>
        <li>
          <%= link_to logout_path do %>
            logout
          <% end %>
        </li>
      </ul>
    </div>

  </ul>  

<% else # logged out%>
  <ul class="nav navbar-nav navbar-right">  
    <div class='nav_item'>
      <%= link_to 'Register', register_path, class: 'btn btn-success btn-small navbar-btn' %>
    </div>
    <div class='nav_item'>
      <%= link_to 'Log in', login_path, class: 'btn btn-small navbar-btn' %>
    </div>
  </ul>
<% end %>










