<table class="table table-hover">
   <thead>
      <tr>
         <th class="col-md-9">Centres</th>
         <th class="col-md-3">Status</th>
      </tr>
   </thead>
 
   <tbody>
      <% @academy.centres.each do |centre| %>       
        <tr>       
           <td><%= link_to centre.name, academy_centre_path(@academy, centre)%></td>
           <td><%= centre.academy_id %></td>
        </tr>
      <% end %>      
   </tbody>
</table>